#include<iostream>
#include<time.h>
using namespace std;
void Exch(int *p, int *q)                   //swap function
{
    int temp=*p;
    *p=*q;
    *q=temp;
}
void QuickSort(int a[], int low, int high)    //Function for quick sort
{
    int i, j, key, k;
    if (low>=high)
    return;
    key=low;
    i=low + 1;
    j=high;
    while (i<=j)
    {
        while (a[i]<=a[key])
        i=i+1;
        while (a[j]>a[key])
        j=j-1;
        if (i<j)
        {
            Exch(&a[i], &a[j]);
        }    
    }
    Exch(&a[j], &a[key]);
    QuickSort(a, low, j-1);
    QuickSort(a, j+1, high);
}
int main()                                      //main function
{
    int n, a[20], i;
    clock_t st, et;
    double ts;
    cout<<"Enter how many numbers are there in the array: ";
    cin>>n;
    cout<<"Enter the array elements: "<<endl;
    for (i=0; i<n; i++)
    {
        cin>>a[i];
    } 
    
    st=clock();                                   //For calculating the time complexity
    QuickSort(a, 0, n-1);
    et=clock();
    ts=(double)(et-st)/CLOCKS_PER_SEC;
    
    cout<<"The Sorted numbers are: ";
    for (i = 0; i < n; i++)
    {
        cout<<"\n"<<a[i];
    }
    cout<<"\nThe time complexity: "<<ts;
}
